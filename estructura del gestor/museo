public class Museo
{
    public List<string> JuegosFavoritos { get; private set; }

    public Museo()
    {
        JuegosFavoritos = new List<string>();
    }

    public void AgregarJuego(string nombreJuego)
    {
        if (!string.IsNullOrEmpty(nombreJuego) && !JuegosFavoritos.Contains(nombreJuego))
        {
            JuegosFavoritos.Add(nombreJuego);
            Console.WriteLine($"'{nombreJuego}' ha sido agregado al museo.");
        }
        else
        {
            Console.WriteLine("El juego ya está en el museo o el nombre es inválido.");
        }
    }

    public void EliminarJuego(string nombreJuego)
    {
        if (JuegosFavoritos.Remove(nombreJuego))
        {
            Console.WriteLine($"'{nombreJuego}' ha sido eliminado del museo.");
        }
        else
        {
            Console.WriteLine("No se encontró el juego en el museo.");
        }
    }

    public void MostrarMuseo()
    {
        Console.WriteLine("\n===== MUSEO VIRTUAL =====");
        if (JuegosFavoritos.Count > 0)
        {
            foreach (var juego in JuegosFavoritos)
            {
                DibujarCuadro(juego);
            }
        }
        else
        {
            Console.WriteLine("El museo está vacío. Agrega algunos juegos para exhibir.");
        }
    }

    private void DibujarCuadro(string titulo)
    {
        string borde = new string('*', titulo.Length + 4);
        Console.WriteLine(borde);
        Console.WriteLine($"* {titulo} *");
        Console.WriteLine(borde);
    }
}
